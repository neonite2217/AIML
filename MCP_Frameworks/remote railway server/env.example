# MCP Knowledge Base Server - Environment Variables Template
# Copy this file to .env and configure for your deployment

# API Configuration
# Generate a secure API key for authentication
# Example: openssl rand -hex 32
API_KEY=your_secure_api_key_here

# Server Configuration
ENABLE_WEB_API=true
PORT=3000
NODE_ENV=production

# Database Configuration
# For local development
DATABASE_PATH=./knowledge.db

# For Railway deployment
# DATABASE_PATH=/app/data/knowledge.db

# For Sevalla deployment  
# DATABASE_PATH=/app/data/knowledge.db

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Security Configuration
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Optimization
SQLITE_CACHE_SIZE=64000
SQLITE_TEMP_STORE=MEMORY
SQLITE_SYNCHRONOUS=NORMAL

# Backup Configuration (for production)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30