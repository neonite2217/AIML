# AI-HR Assistant - Environment Variables Template
# Copy this file to .env and configure for your setup

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://hradmin:hrpass@localhost:5432/companydb

# For Docker Desktop (if PostgreSQL is running in container)
# DATABASE_URL=postgresql://hradmin:hrpass@host.docker.internal:5432/companydb

# Gmail Configuration (for email notifications)
GMAIL_EMAIL=hr.demo@neo.corp
GMAIL_APP_PASSWORD=your_16_character_app_password_here

# Obsidian Configuration (for knowledge management)
OBSIDIAN_VAULT_PATH=/Users/yourusername/Documents/Obsidian Vault

# HR Configuration
COMPANY_NAME=Neo Corp
HR_DEPARTMENT_EMAIL=hr@neo.corp
DEFAULT_TIMEZONE=UTC

# Notification Settings
LATE_ARRIVAL_THRESHOLD_MINUTES=15
NOTIFICATION_DELAY_HOURS=2
FOLLOW_UP_DELAY_DAYS=1

# Email Templates
LATE_ARRIVAL_SUBJECT=Late Arrival Notice - {date}
LATE_ARRIVAL_TEMPLATE=Hi {name}, we noticed you arrived late today. Please reply with the reason for documentation purposes. Best regards, HR Team

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./ai_hr.log

# Development Settings
DEBUG_MODE=false
DRY_RUN=false